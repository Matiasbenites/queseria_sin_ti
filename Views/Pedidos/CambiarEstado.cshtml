@model QueseriaSoftware.Models.Pedido

@{
    ViewData["Title"] = "Confirmar cambio de estado";
}

<h1>Confirmar cambio de estado</h1>

<h4>¿Estás seguro de cambiar el estado de este pedido?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Fecha:</dt>
        <dd class="col-sm-10">@Model.Fecha.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Cliente:</dt>
        <dd class="col-sm-10">@Model.Usuario?.Nombre</dd>

        <dt class="col-sm-2">Total:</dt>
        <dd class="col-sm-10">@Model.Total.ToString("C")</dd>

        <dt class="col-sm-2">Estado Actual:</dt>
        <dd class="col-sm-10">@Model.Estado</dd>
    </dl>

    <form asp-action="ConfirmarCambioEstado" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-warning">Sí, cambiar estado</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
