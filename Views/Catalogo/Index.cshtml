@model QueseriaSoftware.ViewModels.AgregarProductoViewModel
@{
    ViewData["Title"] = "Agregar/Buscar Producto";
}

<div class="container">
    <div class="row">
        <div class="col-12 section-header">
            Agregar/buscar <br /> producto
        </div>

        <div class="col-12 centered-container mb-4">
            <div class="form-box" style="width: 400px;">
                <form asp-action="BuscarProducto" method="get" class="d-flex">
                    <input asp-for="Busqueda" class="form-control input-gray me-2" style="margin-bottom: initial;" placeholder="Buscar producto" />
                    <button type="submit" class="btn-green" style="width: 100px;">Buscar</button>
                </form>
            </div>
        </div>

        <div class="col-12 d-flex justify-content-center flex-wrap gap-4">
            @if (Model.Productos != null && Model.Productos.Count > 0)
            {
                @foreach (var producto in Model.Productos)
                {
                    <div class="form-box p-3" style="background-color: #d9d9d9; padding: 20px;">
                        <div class="producto-box mb-3" style="height: 200px; background-color: white;"></div>

                        <div class="producto-line mb-2">
                            producto: @producto.Nombre
                        </div>
                        <div class="producto-line mb-2">
                            descripción: @producto.Descripcion
                        </div>
                        <div class="producto-line mb-3">
                            precio: $@producto.Precio.ToString("N2")
                        </div>

                        <form asp-action="AgregarAlPedido" method="post" class="d-flex align-items-center gap-2">
                            <input type="hidden" name="ProductoId" value="@producto.Id" />
                            <input type="number" name="Cantidad" class="form-control input-gray" placeholder="Cantidad" style="width: 100px; margin-bottom: 0;" min="1" />
                            <button type="submit" class="btn-green" style="width: 150px;">Agregar al pedido</button>
                        </form>
                    </div>
                }
            }
            else
            {
                <div class="form-box p-3" style="background-color: #d9d9d9;">
                    <div class="mb-2">
                        <p>No hay productos disponibles actualmente</p>
                    </div>
                </div>
            }
        </div>

        <div class="col-12 centered-container mt-4">
            <div class="menu-btn-container">
                <a asp-controller="Home" asp-action="Index" class="btn-green">Volver al inicio</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
