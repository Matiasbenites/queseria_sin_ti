@model QueseriaSoftware.ViewModels.FacturaViewModel
@{
    Layout = null; // Recomendado para vistas que se exportan a PDF
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Factura Nº @Model.PedidoId</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 14px;
            margin: 40px;
        }

        .titulo {
            text-align: center;
            margin-bottom: 20px;
        }

        .cliente-info, .resumen-total {
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }

        th, td {
            padding: 8px;
            border: 1px solid #ccc;
            text-align: left;
        }

        th {
            background-color: #f0f0f0;
        }

        .total {
            text-align: right;
            font-weight: bold;
            font-size: 16px;
        }

        .footer {
            text-align: center;
            font-size: 12px;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <div class="titulo">
        <h2>Factura Nº @Model.PedidoId</h2>
        <p>Fecha: @Model.Fecha.ToString("dd/MM/yyyy HH:mm")</p>
    </div>

    <div class="cliente-info">
        <p><strong>Cliente:</strong> @Model.ClienteNombre</p>
        <p><strong>Medio de Pago:</strong> @Model.MedioPago</p>
    </div>

    <table>
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Producto</td>
                    <td>@item.Cantidad</td>
                    <td>$@item.PrecioUnitario.ToString("N2")</td>
                    <td>$@item.Subtotal.ToString("N2")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="total">
        Total: $@Model.Total.ToString("N2")
    </div>

    <div class="footer">
        Gracias por su compra.
    </div>
</body>
</html>
